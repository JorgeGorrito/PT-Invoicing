@page "{id:int}"
@model Invoicing.Web.Pages.Invoices.DetailModel
@{
    ViewData["Title"] = $"Factura #{Model.Invoice?.Id}";
}

<div class="px-4">
    <div class="max-w-4xl mx-auto">
        @if (Model.Invoice == null)
        {
            <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-lg">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-8 w-8 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-lg font-medium text-red-800">Factura no encontrada</p>
                        <p class="mt-2 text-sm text-red-700">
                            La factura que estás buscando no existe.
                        </p>
                    </div>
                </div>
            </div>
            <div class="mt-6">
                <a asp-page="/Invoices/List" class="btn-primary">
                    Volver al Listado
                </a>
            </div>
        }
        else
        {
            <!-- Header -->
            <div class="mb-8 flex justify-between items-start">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Factura #@Model.Invoice.Id</h1>
                    <p class="text-gray-600">Fecha: @Model.Invoice.Date.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <a asp-page="/Invoices/List" class="btn-secondary">
                    <svg class="inline w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver
                </a>
            </div>

            <!-- Client Information -->
            <div class="bg-white shadow-md rounded-lg p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Información del Cliente
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Nombre Completo</p>
                        <p class="mt-1 text-base text-gray-900">@Model.Invoice.Client.FirstName @Model.Invoice.Client.LastName</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Número de Documento</p>
                        <p class="mt-1 text-base text-gray-900">@Model.Invoice.Client.DocNumber</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Dirección</p>
                        <p class="mt-1 text-base text-gray-900">@Model.Invoice.Client.Address</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Teléfono</p>
                        <p class="mt-1 text-base text-gray-900">@Model.Invoice.Client.Phone</p>
                    </div>
                </div>
            </div>

            <!-- Items -->
            <div class="bg-white shadow-md rounded-lg p-6 mb-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                    <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    Artículos
                </h2>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Código
                                </th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Cantidad
                                </th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Precio Unitario
                                </th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Total
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in Model.Invoice.Items)
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">@item.ArticleCode</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right">
                                        <div class="text-sm text-gray-900">@item.Quantity</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right">
                                        <div class="text-sm text-gray-900">@item.UnitPrice.ToString("C0")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right">
                                        <div class="text-sm font-medium text-gray-900">@item.Total.ToString("C0")</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Totals -->
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 shadow-md rounded-lg p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Totales de la Factura</h2>
                
                <div class="space-y-3 bg-white rounded-lg p-6">
                    <div class="flex justify-between text-gray-700">
                        <span class="text-base">Valor Bruto:</span>
                        <span class="text-base font-semibold">@Model.Invoice.GrossValue.ToString("C0")</span>
                    </div>
                    <div class="flex justify-between text-gray-700">
                        <span class="text-base">Descuento (5%):</span>
                        <span class="text-base font-semibold text-green-600">-@Model.Invoice.Discount.ToString("C0")</span>
                    </div>
                    <div class="flex justify-between text-gray-700">
                        <span class="text-base">IVA (19%):</span>
                        <span class="text-base font-semibold">@Model.Invoice.Tax.ToString("C0")</span>
                    </div>
                    <div class="border-t-2 border-gray-300 pt-3 mt-3">
                        <div class="flex justify-between">
                            <span class="text-xl font-bold text-gray-900">Total:</span>
                            <span class="text-2xl font-bold text-blue-600">@Model.Invoice.TotalValue.ToString("C0")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
